{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "outDir": "./dist/integration",
    "rootDir": "./",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "lib": ["es2020"],
    "module": "esnext",
    "skipLibCheck": true
  },
  "include": [
    "integration/**/*",
    "components/**/*", 
    "stores/**/*",
    "hooks/**/*",
    "utils/**/*",
    "app/locales/**/*",
    "app/i18n.ts",
    "app/i18n-provider.tsx"
  ],
  "exclude": [
    "node_modules",
    "android",
    "ios",
    ".expo",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}