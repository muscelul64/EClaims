# Porsche E-Claims Environment Template
# Copy this file to .env and customize the values for your environment
# This template shows all available environment variables

# ================================
# REQUIRED VARIABLES
# ================================
EXPO_PUBLIC_ENVIRONMENT=development
EXPO_PUBLIC_SHARED_SECRET=your-secure-32-character-secret-key-here

# ================================
# API CONFIGURATION
# ================================
EXPO_PUBLIC_API_BASE_URL_DEV=https://api-dev.eclaims.deactech.com
EXPO_PUBLIC_API_BASE_URL_STAGING=https://api-staging.eclaims.deactech.com
EXPO_PUBLIC_API_BASE_URL_PROD=https://api.eclaims.deactech.com
EXPO_PUBLIC_API_TIMEOUT=30000


EXPO_PUBLIC_MASTER_APP_SCHEME_DEV=porsche-master-app-dev
EXPO_PUBLIC_MASTER_APP_SCHEME_STAGING=porsche-master-app-staging
EXPO_PUBLIC_MASTER_APP_SCHEME_PROD=porsche-master-app

# ================================
# FEATURE FLAGS
# ================================
EXPO_PUBLIC_ENABLE_BIOMETRIC_AUTH=true
EXPO_PUBLIC_ENABLE_OFFLINE_MODE=true
EXPO_PUBLIC_ENABLE_ANALYTICS=false
EXPO_PUBLIC_ENABLE_DEVELOPER_MENU=true

# ================================
# OPTIONAL VARIABLES
# ================================
# Add any additional environment-specific variables here
# EXPO_PUBLIC_CUSTOM_API_KEY=
# EXPO_PUBLIC_THIRD_PARTY_SERVICE_URL=