  "description": "E-Claims integration module for embedding in existing Android apps",
  "main": "integration/index.ts",
  "types": "integration/index.ts",
  "files": [
    "integration/**/*",
    "components/**/*",
    "stores/**/*",
    "hooks/**/*",
